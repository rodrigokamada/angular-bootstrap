    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "rxjs": "~7.5.5",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.3",
    "@angular/cli": "~13.3.3",
    "@angular/compiler-cli": "~13.3.4",
    "@types/jasmine": "~3.10.2",
